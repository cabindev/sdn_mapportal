// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma - model Document ที่ปรับปรุงแล้ว
model Document {
  id            Int         @id @default(autoincrement())
  title         String
  description   String      @db.Text
  categoryId    Int
  category      CategoryDoc @relation(fields: [categoryId], references: [id])
  filePath      String
  coverImage    String?
  province      String
  amphoe        String
  district      String
  latitude      Float
  longitude     Float
  year          Int?
  viewCount     Int         @default(0)
  downloadCount Int         @default(0)   
  isPublished   Boolean     @default(true)
  
  // เพิ่มความสัมพันธ์กับ User
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([categoryId])
  @@index([year])
  @@index([userId]) // เพิ่ม index สำหรับการค้นหาตาม user
}

// ปรับ model User เพื่อเพิ่มความสัมพันธ์กับ Document
model User {
  id                  Int            @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String         @unique
  password            String
  image               String?
  role                Role           @default(MEMBER)
  emailVerified       DateTime?
  resetToken          String?        @unique
  resetTokenCreatedAt DateTime?
  resetTokenExpiresAt DateTime?
  lastPasswordReset   DateTime?
  
  // เพิ่มความสัมพันธ์กับ Document
  documents           Document[]
  
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  @@index([email])
  @@index([role])
}

enum Role {
  MEMBER
  ADMIN
}


// prisma/schema.prisma
model CategoryDoc {
  id          Int       @id @default(autoincrement())
  name        String    @unique  // คงไว้เหมือนเดิม
  description String?   
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  documents   Document[]

  @@index([name])
}
